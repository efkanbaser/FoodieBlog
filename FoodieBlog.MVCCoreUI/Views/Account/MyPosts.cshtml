@model List<MyPostsVm>

<div class="container">
    <div class="row">
        <table class="table table-striped table-hover mb-5">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Title</th>
                    <th scope="col">Link</th>
                    <th scope="col">Edit</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int count = 1;
                    foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@count</th>
                            <td>@item.Title</td>
                            <td>@item.Href</td>
                            <td>
                                <a class="btn btn-info btnEdit" postid="@item.Id"><i class='fas fa-pencil-alt'></i> Edit</a>
                            </td>
                            <td>
                                <a class="btn btn-danger btnDelete" postid="@item.Id"><i class='fas fa-trash'></i> Delete</a>
                            </td>
                        </tr>
                        count++;
                    }
                }
            </tbody>
        </table>
    </div>
</div>





@section Scripts {
    <script>
        // Sil tuşuna ilk tıklandığında modala gelen veriler
        $(document).on('click', '.btnDelete', function () {
            Swal.fire({
                title: "Are you sure?",
                text: "You won't be able to revert this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, delete it!"
            }).then((result) => {
                if (result.isConfirmed) {

                  var id = $(this).attr('postid');


                    // ajax
                  $.ajax({
                      url: "/Account/DeletePost",
                      type: "post",
                      dataType: "json",
                      data: { id: id },
                      success: function (r) {
                          if (r.result) {
                              Swal.fire({
                                title: "Deleted!",
                                text: "Your post has been deleted.",
                                icon: "success"
                              }).then(() => {
                                window.location.reload();
                                });

                          }
                      },
                      error: function () {
                        Swal.fire({
                            title: "Error!",
                            text: "Something went wrong.",
                            icon: "error"
                        });
                      }
                  }
                  );
            }
            });
        });

    </script>
}
